{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleDetection": "auto",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "vite-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "exclude": [
    "node_modules"
  ]
}
